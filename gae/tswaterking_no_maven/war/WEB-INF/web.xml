<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>tswaterking.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>sign</servlet-name>
		<servlet-class>tswaterking.demo.guestbook.SignGuestbookServlet</servlet-class>
	</servlet>

	<!-- water king -->
	<servlet>
		<servlet-name>waterking</servlet-name>
		<servlet-class>tswaterking.waterking.action.BoardAction</servlet-class>
	</servlet>
	<!-- water king -->


	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/tswaterking/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>sign</servlet-name>
		<url-pattern>/demo/guestbook/sign.do</url-pattern>
	</servlet-mapping>

	<!-- water king -->
	<servlet-mapping>
		<servlet-name>waterking</servlet-name>
		<url-pattern>/waterking/waterking.do</url-pattern>
	</servlet-mapping>
	<!-- water king -->

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


	<!-- Default page to serve -->
	<welcome-file-list>
		<!--    <welcome-file>Tswaterking.html</welcome-file>-->
		<welcome-file>/demo/guestbook.jsp</welcome-file>
	</welcome-file-list>

</web-app>