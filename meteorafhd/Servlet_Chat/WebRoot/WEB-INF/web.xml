<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <description>LoginServlet</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>chat.LoginServlet</servlet-class>
  </servlet>
   <servlet>
    <description>chat_info</description>
    <display-name>chat_info</display-name>
    <servlet-name>new_chat_info</servlet-name>
    <servlet-class>chat.chat_info</servlet-class>
  </servlet>
  <servlet>
    <description>userList</description>
    <display-name>userList</display-name>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>chat.UserServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>new_chat_info</servlet-name>
    <url-pattern>/servlet/chat_info2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
